        </el-tab-pane>
        <el-tab-pane label="添加人员信息">
          <div class="card-form">
            <el-form :model="addCompanyUser" :rules="addCompanyUserRules" ref="addCompanyUser">
              <el-form-item label="公司名称" prop="CompanyId">
                <el-select
