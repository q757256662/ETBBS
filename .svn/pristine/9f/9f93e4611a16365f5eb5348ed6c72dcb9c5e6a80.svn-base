<script>
// import Media from 'vue-media'
import { mapState, mapGetters } from "vuex";
import Cookies from "js-cookie";
import { getNewpublic, cancleRemind } from "@/api/topic";


export default {
  data() {
    return {
      // m: $.media,
      searchText: "",
      isShowTitle: false,
      searchKey: "", //关键词
      searchExpend: false, //搜索框是否扩展
      colorBox: [
        //颜色选项
        "#FB966E",
        "#FF9999",
        "#99CC33",
        "#FF9900",
        "#FF0033",
        "#FF8000",
        "#00AEAE",
        "#0066CC",
        "#8C8C00",
