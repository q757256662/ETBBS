      >
        <span class="custom-tree-node" slot-scope="{ node, data }">
         <span class="custom-tree-node-titile">
            <!-- <svg-icon ></svg-icon> -->
            <svg-icon icon-class="company2" v-if="node.level==1"></svg-icon>
           <span class="company-label">{{ node.label }}</span> 
         </span>
          <span v-if="node.level==2">
