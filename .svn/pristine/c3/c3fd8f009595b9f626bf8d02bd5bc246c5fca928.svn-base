              </el-form-item>
              <el-form-item label="功能使用权限分">
                <el-input v-model="limitScore"></el-input>
              </el-form-item>
              <el-form-item>
                <el-button type="primary" @click="handleSetUserPower">确认</el-button>
                <p style="font-size:14px;color:#888;">(目前功能：收藏、脚印)</p>
