                        <i class="block" :style="{background:item.Color}"></i> {{item.KeyFileIds}}
                        </span>
                  </p>
                </h2>
              </div>
              <span class="icons">
                        <!-- icon专用 TODO -->
                      </span>
              <div class="append-icons">
                <!-- icon专用 TODO -->
              </div>
            </div>
            <div class="detail">
              <div class="count-block">
